<!DOCTYPE html>
<html>
  <head>
    <title>Chat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if user_signed_in? %>
        <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'btn btn-danger pull-right' %>
      </li>         
    <% else %>
        <%= link_to 'Sign Up', new_user_registration_path, class: "btn pull-right" %>
        <%= link_to 'Log In', new_user_session_path, class: "btn pull-right" %>
    <% end %>    
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
